<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.yasunaka.comprars"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="28" />

    <application
        android:name="br.com.yasunaka.compras.ProdutosApplication"
        android:allowBackup="true"
        android:appComponentFactory="android.support.v4.app.CoreComponentFactory"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="br.com.yasunaka.compras.activity.AboutActivity"
            android:parentActivityName="br.com.yasunaka.compras.activity.MainActivity" >
        </activity>
        <activity
            android:name="br.com.yasunaka.compras.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.com.yasunaka.compras.activity.EditProdutoActivity"
            android:parentActivityName="br.com.yasunaka.compras.activity.MainActivity"
            android:windowSoftInputMode="stateHidden" >
        </activity>
    </application>

</manifest>